{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.4.451.19169",
      "templateHash": "6096663090321645286"
    }
  },
  "parameters": {
    "webAppName": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "vnetIntegration": {
      "type": "bool",
      "defaultValue": false
    }
  },
  "functions": [],
  "variables": {
    "aspName": "[format('asp-{0}', parameters('webAppName'))]",
    "vnetName": "[format('{0}-vnet', parameters('webAppName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2021-01-15",
      "name": "[variables('aspName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "S1"
      }
    },
    {
      "condition": "[parameters('vnetIntegration')]",
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2021-02-01",
      "name": "[variables('vnetName')]",
      "location": "[parameters('location')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "10.0.0.0/8"
          ]
        },
        "subnets": [
          {
            "name": "web",
            "properties": {
              "addressPrefix": "10.0.0.0/24",
              "delegations": [
                {
                  "name": "webDelegation",
                  "properties": {
                    "serviceName": "Microsoft.Web/serverFarms"
                  }
                }
              ]
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2021-01-15",
      "name": "[parameters('webAppName')]",
      "location": "[parameters('location')]",
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('aspName'))]",
        "virtualNetworkSubnetId": "[if(parameters('vnetIntegration'), resourceId('Microsoft.Network/virtualNetworks', variables('vnetName')), '')]",
        "httpsOnly": true,
        "siteConfig": {
          "vnetRouteAllEnabled": true,
          "http20Enabled": true
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('aspName'))]",
        "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]"
      ]
    }
  ]
}